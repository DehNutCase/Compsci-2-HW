//takes a file and puts all words into a multiset
std::multiset<std::string> take_file(std::string file_name) {
	std::ifstream file;
	file.open(file_name);
	std::multiset<std::string> to_return;
	std::string word;
	while (file >> word) {
		to_return.insert(word);
	}
	return to_return;
}

void count_words(std::multiset<std::string> a) {
	std::set<std::string> words;
	for (std::multiset<std::string>::iterator i = a.begin(); i != a.end(); i++) {
		words.insert(*i);
	}
	for (std::multiset<std::string>::iterator i = words.begin(); i != words.end(); i++) {
		std::cout << *i << " appears in the file " << a.count(*i) << " times.\n";
	}
}

